<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="dataBaseConnect.DataBaseConnect" table="data_base">
        <meta attribute="class-description">
            This class contains developer details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="firstName" column="firstName" type="string"/>
        <property name="lastName" column="lastName" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="date" column="date" type="string"/>
    </class>

    <class name="dataBaseConnect.DataBaseConnectPassword" table="data_base_password">
        <meta attribute="class-description">
            This class contains passwords.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="password" column="password" type="string"/>
    </class>

</hibernate-mapping>